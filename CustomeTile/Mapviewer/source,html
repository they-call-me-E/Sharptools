  // Function to simulate marker movement
  function simulateMovement(marker, step, interval) {
    var lng = marker.getLngLat().lng;
    var lat = marker.getLngLat().lat;

    setInterval(() => {
      lng += step;
      lat += step;
      updateMarkerPosition(marker, lng, lat);
    }, interval);

    
